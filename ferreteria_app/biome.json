{
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
  "extends": [],
  "files": {
    "includes": ["**/*.js"],
    "ignoreUnknown": true,
    "experimentalScannerIgnores": [
      "node_modules/**",
      "public/**",
      "database/**",
      "dist/**",
      "coverage/**",
      "*.db.json",
      "*.log",
      ".env"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
